<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <skipIfNotSupported />
  <programGroup defaultName="ISSI-TOOLS" location="applications" />

  <!-- Windows -->
  <shortcut
    name="ITT Conformance Console"
    target="$JAVA_HOME\bin\javaw"
    commandLine='-Xms256m -Xmx512m -Djava.library.path=./bin/native/jpcap -classpath "./diets.jar;./lib/*"  gov.nist.p25.issi.testlauncher.DietsGUI -startup startup/diets-standalone.properties'
    workingDirectory="$INSTALL_PATH"
    description="ITT Conformance Console"
    iconFile="$INSTALL_PATH\gfx\tester-icon.ico"
    iconIndex="0"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Base"/>
    <os family="windows"/>
  </shortcut>

